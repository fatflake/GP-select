             % left Logo
          \\
          \vskip1.0cm
      \end{column}
      \begin{column}{.01\paperwidth}
      \end{column}
    \end{columns}
    \vspace{0.3cm}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

