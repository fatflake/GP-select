\definecolor{bkgrnd}{HTML}{FFFFFF}
\definecolor{mainfgnd}{HTML}{EEEEFF} 
\definecolor{title}{HTML}{00005C} 
\definecolor{subtitle}{HTML}{225cd6}  
\definecolor{sectionhd}{HTML}{0033cc}  
\definecolor{footline}{HTML}{9999EE} 
\definecolor{maintext}{HTML}{444444} 
\definecolor{other}{HTML}{999999} 
\definecolor{blocktbgn}{HTML}{225cd6}  
\colorlet{lblue}{blocktbgn!60}  
